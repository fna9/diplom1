<h1>Список пользователей</h1>

<table>
  <% @users.each do |user| %>
	<tr class=" <%= cycle('list_line_odd', 'list_line_even') %>">
	
		<td class="list_description">
		
			<dl>
				<dt><%= user.login %></dt>
				<dt><%= user.email %></dt>
				<dt><%= user.password %></dt>
			</dt>
		</td>
		
		<td class="list_actions">
			<%= link_to 'Показать', user %><br/>
			<%= link_to 'Изменить', edit_user_path(user) %><br/>
			<%= link_to 'Удалить', user, method: :delete, data: { confirm: 'Вы уверены?' } %>
		</td>
	</tr>
<% end %>
</table>

<br />

<%= link_to 'Новый пользователь', new_user_path %>
