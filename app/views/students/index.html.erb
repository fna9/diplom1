<p id="notice"><%= notice %></p>

<h1>Студенты</h1>

<table>
  <thead>
    <tr>
      <th>Фамилия</th>
      <th>Ммя</th>
      <th>Отчество</th>
      <th>Дата рождения</th>
      <th>Номер зачетной книжки</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.last_name %></td>
        <td><%= student.first_name %></td>
        <td><%= student.second_name %></td>
        <td><%= student.b_date %></td>
        <td><%= student.number_of_books %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый студент', new_student_path %>
